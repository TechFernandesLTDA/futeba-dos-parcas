# Auto detect text files and perform LF normalization
* text=auto

# Kotlin source files
*.kt text eol=lf
*.kts text eol=lf

# Java source files
*.java text eol=lf

# TypeScript/JavaScript
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf

# XML files
*.xml text eol=lf

# Gradle files
*.gradle text eol=lf
*.properties text eol=lf
gradlew text eol=lf
gradle-wrapper.properties text eol=lf

# Markdown and documentation
*.md text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# Batch files (Windows)
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files (never modify)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.ttf binary
*.otf binary
*.jar binary
*.apk binary
*.aab binary
*.keystore binary
*.jks binary

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
