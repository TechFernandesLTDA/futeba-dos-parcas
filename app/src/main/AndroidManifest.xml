<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Package visibility for Google Play Services (Android 12+) -->
    <queries>
        <package android:name="com.google.android.gms" />
        <package android:name="com.android.vending" />
    </queries>

    <!-- Permissões de Rede -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permissões de Localização -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Permissão de localização em background para rastreamento de jogos -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Permissões de Notificações e Alarmes -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- Permissão para agendar alarmes exatos (Smart Reminders) - Android 12+ -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <!-- Permissão para receber boot completo e reiniciar alarmes -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Permissões de Autenticação -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- Permissões de Mídia - Imagens -->
    <!-- Android 13+ (API 33+) usa READ_MEDIA_* -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Android 13+ para áudio (Voice Messages) -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <!-- Fallback para Android 12 e inferior -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <!-- WRITE_EXTERNAL_STORAGE para Android 9 e inferior (API <= 28) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <!-- Permissão de Câmera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Permissão de Gravação de Áudio (Voice Messages) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" tools:node="remove" />

    <!-- Feature declarations -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <!-- Microfone para mensagens de voz -->
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />

    <application
        android:name=".FutebaApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FutebaDosParcas"
        android:enableOnBackInvokedCallback="true"
        android:usesCleartextTraffic="false"
        android:appCategory="social"
        tools:targetApi="31">

        <activity
            android:name=".ui.splash.SplashActivityCompose"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FutebaDosParcas.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.auth.LoginActivityCompose"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.auth.RegisterActivityCompose"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.main.MainActivityCompose"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FutebaDosParcas"
            android:configChanges="screenSize|smallestScreenSize|screenLayout" />

        <service
            android:name=".service.FcmService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Disable default WorkManager initializer (using custom Hilt Configuration.Provider) -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

        <!-- BroadcastReceiver para lembretes inteligentes -->
        <receiver
            android:name=".util.ReminderBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="GAME_REMINDER" />
                <action android:name="STREAK_CHECK" />
                <action android:name="WEEKLY_RECAP" />
            </intent-filter>
        </receiver>

        <!-- BroadcastReceiver para reiniciar alarmes após boot -->
        <receiver
            android:name=".util.BootReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
