<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout adaptativo para tablets (sw600dp+) - GameDetailFragment
    Estrutura: Layout otimizado com maior espaçamento e melhor uso do espaço horizontal
    Mantém a mesma estrutura do layout compact para compatibilidade com o código existente
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.games.GameDetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        style="@style/FutebaAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Detalhes do Jogo"
            app:titleCentered="true" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content container with max width for tablets -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Center content with max width -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="@dimen/content_padding_horizontal">

            <!-- RecyclerView with card appearance for tablets -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/spacing_md"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="@dimen/content_max_width">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingHorizontal="@dimen/spacing_md"
                    android:paddingTop="@dimen/spacing_md"
                    android:paddingBottom="96dp" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <!-- Botão de confirmação - Centralizado e com largura adequada para tablets -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/spacing_lg"
        android:minWidth="360dp"
        android:paddingVertical="14dp"
        android:paddingHorizontal="@dimen/spacing_xl"
        android:text="@string/fragment_game_detail_text_1"
        android:textSize="16sp"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_check"
        app:iconGravity="start"
        app:iconPadding="@dimen/spacing_sm" />

    <!-- Progress indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
