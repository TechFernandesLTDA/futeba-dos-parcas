<?xml version="1.0" encoding="utf-8"?>
<!-- Layout para tablets (sw600dp+) - BottomSheet como dialog centralizado -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerCardContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Em tablets, usar dialog centralizado ao invés de BottomSheet -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        app:layout_constraintWidth_max="600dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:maxHeight="720dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="28dp"
                android:paddingVertical="24dp">

                <!-- Header com Foto e Nome -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingVertical="20dp"
                    android:background="@drawable/bg_player_card_header">

                    <!-- Foto do Jogador com Brasão - Maior em tablets -->
                    <FrameLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="70dp"
                            app:cardElevation="10dp"
                            app:strokeWidth="5dp"
                            app:strokeColor="?attr/colorPrimary">

                            <ImageView
                                android:id="@+id/ivPlayerPhoto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_player_placeholder"
                                android:contentDescription="@string/bottom_sheet_player_card_contentdescription_1" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Brasão de Nível -->
                        <ImageView
                            android:id="@+id/ivLevelBadgeBottomSheet"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:contentDescription="@string/bottom_sheet_player_card_contentdescription_2"
                            android:src="@drawable/ic_level_badge_0" />

                    </FrameLayout>

                    <!-- Nome -->
                    <TextView
                        android:id="@+id/tvPlayerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/bottom_sheet_player_card_text_3"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Rodrigo Gomes" />

                    <!-- Desde quando -->
                    <TextView
                        android:id="@+id/tvMemberSince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/bottom_sheet_player_card_text_4"
                        android:textSize="15sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Membro desde Jan 2024" />

                </LinearLayout>

                <!-- Nível e XP -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="?attr/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bottom_sheet_player_card_text_5"
                                    android:textSize="15sp"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.9" />

                                <TextView
                                    android:id="@+id/tvLevel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bottom_sheet_player_card_text_6"
                                    android:textSize="56sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    tools:text="5" />

                                <TextView
                                    android:id="@+id/tvLevelName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bottom_sheet_player_card_text_7"
                                    android:textSize="18sp"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.95"
                                    tools:text="Habilidoso" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bottom_sheet_player_card_text_8"
                                android:textSize="72sp" />

                        </LinearLayout>

                        <!-- Barra de Progresso XP -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/bottom_sheet_player_card_text_9"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.9" />

                                <TextView
                                    android:id="@+id/tvXpProgress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bottom_sheet_player_card_text_10"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    tools:text="2500 / 3850 XP" />

                            </LinearLayout>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progressXp"
                                android:layout_width="match_parent"
                                android:layout_height="14dp"
                                android:layout_marginTop="10dp"
                                app:trackCornerRadius="7dp"
                                app:indicatorColor="@android:color/white"
                                app:trackColor="#4DFFFFFF"
                                tools:progress="65" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Estatísticas Principais -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/bottom_sheet_player_card_text_11"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Stats em grid 3x2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Jogos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bottom_sheet_player_card_text_12"
                            android:textSize="36sp" />

                        <TextView
                            android:id="@+id/tvTotalGames"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/bottom_sheet_player_card_text_13"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/bottom_sheet_player_card_text_14"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Gols -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bottom_sheet_player_card_text_15"
                            android:textSize="36sp" />

                        <TextView
                            android:id="@+id/tvTotalGoals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/bottom_sheet_player_card_text_16"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/bottom_sheet_player_card_text_17"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Assistências -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bottom_sheet_player_card_text_18"
                            android:textSize="36sp" />

                        <TextView
                            android:id="@+id/tvTotalAssists"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/bottom_sheet_player_card_text_19"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/bottom_sheet_player_card_text_20"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Segunda linha de stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="3">

                    <!-- Vitórias -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bottom_sheet_player_card_text_21"
                            android:textSize="36sp" />

                        <TextView
                            android:id="@+id/tvWins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/bottom_sheet_player_card_text_22"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="25" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/bottom_sheet_player_card_text_23"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- MVP -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bottom_sheet_player_card_text_24"
                            android:textSize="36sp" />

                        <TextView
                            android:id="@+id/tvMvp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/bottom_sheet_player_card_text_25"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/bottom_sheet_player_card_text_26"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Defesas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bottom_sheet_player_card_text_27"
                            android:textSize="36sp" />

                        <TextView
                            android:id="@+id/tvSaves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/bottom_sheet_player_card_text_28"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/bottom_sheet_player_card_text_29"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Skills/Ratings -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/bottom_sheet_player_card_text_30"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Skills em duas colunas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Coluna esquerda -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <!-- Ataque -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="@string/bottom_sheet_player_card_text_31"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurface" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progressStriker"
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="12dp"
                                app:trackCornerRadius="5dp"
                                app:indicatorColor="?attr/colorPrimary"
                                app:trackColor="?attr/colorSurfaceVariant"
                                tools:progress="75" />

                            <TextView
                                android:id="@+id/tvStrikerRating"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="@string/bottom_sheet_player_card_text_32"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                android:gravity="end"
                                tools:text="3.8" />

                        </LinearLayout>

                        <!-- Meio-Campo -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="@string/bottom_sheet_player_card_text_33"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurface" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progressMid"
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="12dp"
                                app:trackCornerRadius="5dp"
                                app:indicatorColor="?attr/colorPrimary"
                                app:trackColor="?attr/colorSurfaceVariant"
                                tools:progress="80" />

                            <TextView
                                android:id="@+id/tvMidRating"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="@string/bottom_sheet_player_card_text_34"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                android:gravity="end"
                                tools:text="4.0" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Coluna direita -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <!-- Defesa -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="@string/bottom_sheet_player_card_text_35"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurface" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progressDefender"
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="12dp"
                                app:trackCornerRadius="5dp"
                                app:indicatorColor="?attr/colorPrimary"
                                app:trackColor="?attr/colorSurfaceVariant"
                                tools:progress="70" />

                            <TextView
                                android:id="@+id/tvDefenderRating"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="@string/bottom_sheet_player_card_text_36"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                android:gravity="end"
                                tools:text="3.5" />

                        </LinearLayout>

                        <!-- Goleiro -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="@string/bottom_sheet_player_card_text_37"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurface" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progressGk"
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="12dp"
                                app:trackCornerRadius="5dp"
                                app:indicatorColor="?attr/colorPrimary"
                                app:trackColor="?attr/colorSurfaceVariant"
                                tools:progress="60" />

                            <TextView
                                android:id="@+id/tvGkRating"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="@string/bottom_sheet_player_card_text_38"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                android:gravity="end"
                                tools:text="3.0" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Botão Compartilhar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShare"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/bottom_sheet_player_card_text_39"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_share"
                    app:iconGravity="textStart"
                    app:cornerRadius="16dp"
                    app:backgroundTint="?attr/colorPrimary" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
