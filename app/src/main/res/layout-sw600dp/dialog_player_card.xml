<?xml version="1.0" encoding="utf-8"?>
<!-- Layout para tablets (sw600dp+) - Player Card maior e otimizado -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Card Container - Maior em tablets -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/playerCard"
        android:layout_width="400dp"
        android:layout_height="720dp"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="20dp"
        app:strokeWidth="2dp"
        app:strokeColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_player_card_green_gradient">

            <!-- Header with Brand and Buttons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Brand Center -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:textColor="@android:color/white"
                        android:shadowColor="#80000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>

                    <TextView
                        android:id="@+id/tvCardTimestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/dialog_player_card_text_1"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        tools:text="Gerado em 28/12/2024 Ã s 23:05"/>
                </LinearLayout>

                <!-- Buttons Right -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnShareWhatsapp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_whatsapp"
                        app:tint="@android:color/white"
                        android:contentDescription="@string/dialog_player_card_contentdescription_2" />

                    <ImageButton
                        android:id="@+id/btnClose"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_close"
                        app:tint="@android:color/white"
                        android:contentDescription="@string/dialog_player_card_contentdescription_3" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Player Photo with Badge - Maior em tablets -->
            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="65dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="4dp"
                    app:strokeColor="@android:color/white">

                    <ImageView
                        android:id="@+id/ivPlayerPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_player_placeholder"
                        android:contentDescription="@string/dialog_player_card_contentdescription_4" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Level Badge Overlay -->
                <ImageView
                    android:id="@+id/ivLevelBadge"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:contentDescription="@string/dialog_player_card_contentdescription_5"
                    android:src="@drawable/ic_level_badge_0" />

            </FrameLayout>

            <!-- Player Name -->
            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/dialog_player_card_text_6"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="3"
                tools:text="Renan Locatiz" />

            <!-- Level Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_level_badge"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_player_card_text_7"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    tools:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_player_card_text_8"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/tvLevelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_player_card_text_9"
                    android:textSize="16sp"
                    android:textColor="?attr/colorPrimary"
                    tools:text="Habilidoso" />

            </LinearLayout>

            <!-- XP Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dialog_player_card_text_10"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:shadowColor="#80000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tvXpProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_player_card_text_11"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:shadowColor="#80000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        tools:text="2500 / 3850" />

                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressXp"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="8dp"
                    app:trackCornerRadius="5dp"
                    app:indicatorColor="?attr/colorTertiary"
                    app:trackColor="#4DFFFFFF"
                    tools:progress="65" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:alpha="0.3"/>

            <!-- Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <!-- Top Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvTotalGames"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_12"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_13"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvTotalGoals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_14"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_15"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvTotalAssists"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_16"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_17"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Bottom Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvWins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_18"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="25" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_19"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvMvp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_20"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_21"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvSaves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_22"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_player_card_text_23"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Skills -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/dialog_player_card_text_24"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:letterSpacing="0.1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="28dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <!-- Striker -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressStriker"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            app:indicatorSize="60dp"
                            app:trackThickness="5dp"
                            app:indicatorColor="?attr/colorTertiary"
                            app:trackColor="#4DFFFFFF"
                            tools:progress="75" />

                        <TextView
                            android:id="@+id/tvStrikerRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/dialog_player_card_text_25"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#60000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            tools:text="3.8" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/dialog_player_card_text_26"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>

                </LinearLayout>

                <!-- Mid -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressMid"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            app:indicatorSize="60dp"
                            app:trackThickness="5dp"
                            app:indicatorColor="?attr/colorTertiary"
                            app:trackColor="#4DFFFFFF"
                            tools:progress="80" />

                        <TextView
                            android:id="@+id/tvMidRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/dialog_player_card_text_27"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#60000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            tools:text="4.0" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/dialog_player_card_text_28"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>

                </LinearLayout>

                <!-- Defender -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressDefender"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            app:indicatorSize="60dp"
                            app:trackThickness="5dp"
                            app:indicatorColor="?attr/colorTertiary"
                            app:trackColor="#4DFFFFFF"
                            tools:progress="70" />

                        <TextView
                            android:id="@+id/tvDefenderRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/dialog_player_card_text_29"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#60000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            tools:text="3.5" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/dialog_player_card_text_30"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>

                </LinearLayout>

                <!-- GK -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressGk"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            app:indicatorSize="60dp"
                            app:trackThickness="5dp"
                            app:indicatorColor="?attr/colorTertiary"
                            app:trackColor="#4DFFFFFF"
                            tools:progress="60" />

                        <TextView
                            android:id="@+id/tvGkRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/dialog_player_card_text_31"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#60000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            tools:text="3.0" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/dialog_player_card_text_32"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
