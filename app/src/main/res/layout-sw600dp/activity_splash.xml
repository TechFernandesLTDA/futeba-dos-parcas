<?xml version="1.0" encoding="utf-8"?>
<!-- Layout para tablets (sw600dp+) - Splash com elementos maiores -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_xl">

        <!-- BrasÃ£o do Jogador - Maior em tablets -->
        <ImageView
            android:id="@+id/ivLevelBadgeSplash"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:alpha="0"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:contentDescription="@string/activity_splash_contentdescription_1" />

        <!-- Logo do App - Maior em tablets -->
        <ImageView
            android:id="@+id/ivAppLogo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="@dimen/spacing_xl"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/app_name" />

        <!-- Frase de Efeito - Texto maior -->
        <TextView
            android:id="@+id/tvSplashQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="@string/activity_splash_text_2"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:alpha="0.7"
            android:paddingHorizontal="@dimen/spacing_xxl" />

    </LinearLayout>

    <include layout="@layout/layout_splash_branding" />

</FrameLayout>
