<?xml version="1.0" encoding="utf-8"?>
<!-- Layout para tablets (sw600dp+) - Login com branding lateral -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="?attr/colorSurface"
    android:weightSum="10">

    <!-- Painel Esquerdo: Branding (40%) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/colorPrimaryContainer"
        android:padding="@dimen/spacing_xl">

        <!-- Logo/Ícone do App -->
        <ImageView
            android:id="@+id/ivAppIconBranding"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/activity_login_contentdescription_1" />

        <!-- Nome do Aplicativo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_text_2"
            android:textSize="@dimen/text_size_display"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:layout_marginTop="@dimen/spacing_lg"
            android:textAlignment="center" />

        <!-- Slogan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_text_3"
            android:textSize="@dimen/text_size_body"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:fontFamily="sans-serif"
            android:layout_marginTop="@dimen/spacing_sm"
            android:alpha="0.8"
            android:textAlignment="center" />

        <!-- Desenvolvedor -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_xxl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_login_text_7"
                android:textSize="@dimen/text_size_caption"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:alpha="0.6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_login_text_8"
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Painel Direito: Formulário (60%) -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_padding_horizontal">

            <!-- Container centralizado com max-width -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                app:layout_constraintWidth_max="400dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.4">

                <!-- Logo pequeno no form (oculto no branding lateral) -->
                <ImageView
                    android:id="@+id/ivAppIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher"
                    android:contentDescription="@string/activity_login_contentdescription_1"
                    android:visibility="gone" />

                <!-- Título oculto (já está no branding) -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_login_text_2"
                    android:visibility="gone" />

                <!-- Slogan oculto -->
                <TextView
                    android:id="@+id/tvSlogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <!-- Subtítulo de Login -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_login_text_4"
                    android:textSize="@dimen/text_size_headline"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Campos de Email e Senha -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    app:boxCornerRadiusTopStart="@dimen/card_corner_radius"
                    app:boxCornerRadiusTopEnd="@dimen/card_corner_radius"
                    app:boxCornerRadiusBottomStart="@dimen/card_corner_radius"
                    app:boxCornerRadiusBottomEnd="@dimen/card_corner_radius"
                    android:layout_marginTop="@dimen/spacing_lg">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    app:endIconMode="password_toggle"
                    app:boxCornerRadiusTopStart="@dimen/card_corner_radius"
                    app:boxCornerRadiusTopEnd="@dimen/card_corner_radius"
                    app:boxCornerRadiusBottomStart="@dimen/card_corner_radius"
                    app:boxCornerRadiusBottomEnd="@dimen/card_corner_radius"
                    android:layout_marginTop="@dimen/form_field_spacing">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/login"
                    android:textSize="16sp"
                    app:cornerRadius="@dimen/card_corner_radius"
                    android:layout_marginTop="@dimen/spacing_lg" />

                <!-- Divider com "ou" -->
                <LinearLayout
                    android:id="@+id/dividerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_lg">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="?attr/colorOutlineVariant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_login_text_5"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:paddingHorizontal="@dimen/spacing_md" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="?attr/colorOutlineVariant" />

                </LinearLayout>

                <!-- Botão Google Sign-In -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoogleSignIn"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/login_with_google"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    app:icon="@drawable/ic_google"
                    app:iconGravity="textStart"
                    app:iconTint="@null"
                    app:iconSize="24dp"
                    app:cornerRadius="@dimen/card_corner_radius"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="2dp"
                    android:layout_marginTop="@dimen/spacing_md" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/spacing_md" />

                <!-- Registro -->
                <LinearLayout
                    android:id="@+id/registerLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_account"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_login_text_6"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Versão -->
                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_login_text_9"
                    android:textSize="@dimen/text_size_caption"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.6"
                    android:layout_marginTop="@dimen/spacing_xl" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>
