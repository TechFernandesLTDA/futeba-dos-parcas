<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============================================== -->
    <!-- OLED-OPTIMIZED DARK THEME                     -->
    <!-- Pure black background + Vibrant colors        -->
    <!-- High contrast for easy reading                -->
    <!-- ============================================== -->
    <style name="Theme.FutebaDosParcas" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Primary: Vibrant Lime Green - Pops on OLED -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_container_dark</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_dark</item>

        <!-- Secondary: Electric Cyan Blue -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        <item name="colorSecondaryContainer">@color/secondary_container_dark</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_dark</item>

        <!-- Tertiary: Vibrant Orange -->
        <item name="colorTertiary">@color/tertiary_dark</item>
        <item name="colorOnTertiary">@color/on_tertiary_dark</item>
        <item name="colorTertiaryContainer">@color/tertiary_container_dark</item>
        <item name="colorOnTertiaryContainer">@color/on_tertiary_container_dark</item>

        <!-- Error: Bright Coral Red -->
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/on_error_dark</item>
        <item name="colorErrorContainer">@color/error_container_dark</item>
        <item name="colorOnErrorContainer">@color/on_error_container_dark</item>

        <!-- Background: Pure Black for OLED power saving -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>

        <!-- Surface: Pure Black base with subtle variant -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>

        <!-- Outlines: Subtle but visible -->
        <item name="colorOutline">@color/outline_dark</item>
        <item name="colorOutlineVariant">@color/outline_variant_dark</item>

        <!-- Legacy mappings -->
        <item name="colorAccent">@color/tertiary_dark</item>

        <!-- Preferences Theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!-- Status Bar: Pure black, blends with content -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar: Pure black -->
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- ============================================== -->
    <!-- DARK THEME BUTTON OVERRIDES                   -->
    <!-- More vibrant colors for OLED                  -->
    <!-- ============================================== -->

    <style name="FutebaButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/on_primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="FutebaButton.Secondary" parent="FutebaButton">
        <item name="backgroundTint">@color/secondary_dark</item>
        <item name="android:textColor">@color/on_secondary_dark</item>
    </style>

    <style name="FutebaButton.Accent" parent="FutebaButton">
        <item name="backgroundTint">@color/tertiary_dark</item>
        <item name="android:textColor">@color/on_tertiary_dark</item>
    </style>

    <style name="FutebaButton.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/primary_dark</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@color/primary_container_dark</item>
    </style>

    <style name="FutebaButton.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/primary_container_dark</item>
    </style>

    <!-- ============================================== -->
    <!-- DARK THEME INPUT STYLES                       -->
    <!-- ============================================== -->
    <style name="FutebaTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">@color/primary_dark</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/on_surface_variant_dark</item>
        <item name="cursorColor">@color/primary_dark</item>
    </style>

    <!-- ============================================== -->
    <!-- DARK THEME CARD STYLES                        -->
    <!-- Subtle elevation on pure black                -->
    <!-- ============================================== -->
    <style name="FutebaCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outline_variant_dark</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/surface_variant_dark</item>
    </style>

    <style name="FutebaCard.Filled" parent="FutebaCard">
        <item name="cardBackgroundColor">@color/surface_variant_dark</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="FutebaCard.Primary" parent="FutebaCard">
        <item name="cardBackgroundColor">@color/primary_container_dark</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- ============================================== -->
    <!-- DARK THEME BOTTOM NAVIGATION                  -->
    <!-- ============================================== -->
    <style name="FutebaBottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface_dark</item>
        <item name="itemIconTint">@color/primary_dark</item>
        <item name="itemTextColor">@color/primary_dark</item>
        <item name="itemActiveIndicatorStyle">@style/FutebaBottomNavIndicator</item>
    </style>

    <style name="FutebaBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_container_dark</item>
    </style>

    <!-- ============================================== -->
    <!-- DARK THEME CHIP STYLES                        -->
    <!-- ============================================== -->
    <style name="FutebaChip" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipBackgroundColor">@color/surface_variant_dark</item>
        <item name="android:textColor">@color/on_surface_dark</item>
    </style>

    <style name="FutebaChip.Selected" parent="FutebaChip">
        <item name="chipBackgroundColor">@color/primary_dark</item>
        <item name="android:textColor">@color/on_primary_dark</item>
    </style>

</resources>
