<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============================================== -->
    <!-- DUOLINGO-INSPIRED LIGHT THEME                 -->
    <!-- Clean, vibrant, and engaging                  -->
    <!-- ============================================== -->
    <style name="Theme.FutebaDosParcas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Colors: Duolingo Green -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>

        <!-- Secondary Brand Colors: Duolingo Blue -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>

        <!-- Tertiary Brand Colors: Duolingo Orange -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>
        <item name="colorTertiaryContainer">@color/tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/on_tertiary_container</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>

        <!-- Background & Surface: Clean White like Duolingo -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>

        <!-- Legacy mappings -->
        <item name="colorAccent">@color/tertiary</item>

        <!-- Preferences Theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!-- Status Bar: White with dark icons (Duolingo style) -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation Bar: White with dark icons -->
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Material You dynamic colors disabled for consistency -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.FutebaDosParcas.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.FutebaDosParcas</item>
    </style>

    <!-- ============================================== -->
    <!-- DUOLINGO-STYLE BUTTON STYLES                  -->
    <!-- Rounded, bold, colorful                       -->
    <!-- ============================================== -->

    <!-- Primary Button: Bright Green -->
    <style name="FutebaButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Secondary Button: Blue -->
    <style name="FutebaButton.Secondary" parent="FutebaButton">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/on_secondary</item>
    </style>

    <!-- Accent Button: Orange -->
    <style name="FutebaButton.Accent" parent="FutebaButton">
        <item name="backgroundTint">@color/tertiary</item>
        <item name="android:textColor">@color/on_tertiary</item>
    </style>

    <!-- Outlined Button -->
    <style name="FutebaButton.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@color/primary_container</item>
    </style>

    <!-- Text Button -->
    <style name="FutebaButton.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/primary_container</item>
    </style>

    <!-- ============================================== -->
    <!-- INPUT STYLES - Clean & Modern                 -->
    <!-- ============================================== -->
    <style name="FutebaTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/on_surface_variant</item>
        <item name="cursorColor">@color/primary</item>
    </style>

    <!-- ============================================== -->
    <!-- CARD STYLES - Duolingo-style Cards            -->
    <!-- ============================================== -->
    <style name="FutebaCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outline_variant</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <style name="FutebaCard.Filled" parent="FutebaCard">
        <item name="cardBackgroundColor">@color/surface_variant</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="FutebaCard.Primary" parent="FutebaCard">
        <item name="cardBackgroundColor">@color/primary_container</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- ============================================== -->
    <!-- BOTTOM NAVIGATION STYLE                       -->
    <!-- ============================================== -->
    <style name="FutebaBottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="itemActiveIndicatorStyle">@style/FutebaBottomNavIndicator</item>
    </style>

    <style name="FutebaBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_container</item>
    </style>

    <!-- ============================================== -->
    <!-- CHIP STYLES                                   -->
    <!-- ============================================== -->
    <style name="FutebaChip" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="FutebaChip.Selected" parent="FutebaChip">
        <item name="chipBackgroundColor">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <!-- ============================================== -->
    <!-- DIALOG STYLES                                 -->
    <!-- ============================================== -->
    <style name="Theme.FutebaDosParas.FullScreenDialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:colorBackground">@color/surface</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
    </style>

    <!-- DCORTE: Dynamic Preset Themes (XML) -->
    <style name="Theme.FutebaDosParcas.Blue" parent="Theme.FutebaDosParcas">
        <item name="colorPrimary">@color/theme_blue_primary</item>
        <item name="colorPrimaryContainer">@color/theme_blue_container</item>
        <item name="colorOnPrimary">@color/theme_blue_on_primary</item>
    </style>

    <style name="Theme.FutebaDosParcas.Orange" parent="Theme.FutebaDosParcas">
        <item name="colorPrimary">@color/theme_orange_primary</item>
        <item name="colorPrimaryContainer">@color/theme_orange_container</item>
        <item name="colorOnPrimary">@color/theme_orange_on_primary</item>
        <!-- Fix secondary for Orange theme (since primary is orange, secondary should be contrasting?) -->
        <!-- For now, keep it simple -->
    </style>

    <style name="Theme.FutebaDosParcas.Purple" parent="Theme.FutebaDosParcas">
        <item name="colorPrimary">@color/theme_purple_primary</item>
        <item name="colorPrimaryContainer">@color/theme_purple_container</item>
        <item name="colorOnPrimary">@color/theme_purple_on_primary</item>
    </style>

    <style name="Theme.FutebaDosParcas.Red" parent="Theme.FutebaDosParcas">
        <item name="colorPrimary">@color/theme_red_primary</item>
        <item name="colorPrimaryContainer">@color/theme_red_container</item>
        <item name="colorOnPrimary">@color/theme_red_on_primary</item>
    </style>

    <style name="Theme.FutebaDosParcas.Navy" parent="Theme.FutebaDosParcas">
        <item name="colorPrimary">@color/theme_navy_primary</item>
        <item name="colorPrimaryContainer">@color/theme_navy_container</item>
        <item name="colorOnPrimary">@color/theme_navy_on_primary</item>
    </style>

    <!-- ============================================== -->
    <!-- BOTTOM SHEET DIALOG STYLE                     -->
    <!-- ============================================== -->
    <style name="Theme.FutebaDosParÃ§as.BottomSheetDialog" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FutebaBottomSheet</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
    </style>

    <style name="FutebaBottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/FutebaBottomSheetShape</item>
        <item name="backgroundTint">@color/surface</item>
    </style>

    <style name="FutebaBottomSheetShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>
