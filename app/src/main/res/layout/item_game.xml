<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Date & Status Row -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/item_game_text_1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:lineSpacingMultiplier="1.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cvStatus"
            tools:text="26/12/2025" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/item_game_text_2"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            tools:text="18:00" />

        <!-- Status Badge com cores dinÃ¢micas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/item_game_text_3"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textAllCaps="true"
                tools:text="ABERTO" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Mini Scoreboard (Shown only when LIVE) -->
        <LinearLayout
            android:id="@+id/layoutScoreboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="4dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cvStatus"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvScoreboardScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_game_text_4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorError"
                android:gravity="center"
                tools:text="2  -  1" />

            <TextView
                android:id="@+id/tvScoreboardTeams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_game_text_5"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:maxEms="10"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Time A vs Time B" />
        </LinearLayout>

        <!-- Location Section -->
        <ImageView
            android:id="@+id/icLocation"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_location"
            app:tint="?attr/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/item_game_text_6"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:lineSpacingMultiplier="1.3"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="@id/icLocation"
            app:layout_constraintBottom_toBottomOf="@id/icLocation"
            app:layout_constraintStart_toEndOf="@id/icLocation"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Arena Sports Meia Praia" />

        <!-- Field & Field Type -->
        <TextView
            android:id="@+id/tvField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="32dp"
            android:text="@string/item_game_text_7"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:lineSpacingMultiplier="1.3"
            app:layout_constraintTop_toBottomOf="@id/tvLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Quadra 5 - Society" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?attr/colorOutlineVariant"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@id/tvField" />

        <!-- Stats Row -->
        <LinearLayout
            android:id="@+id/layoutStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <!-- Confirmados -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_group"
                    app:tint="@color/success" />

                <TextView
                    android:id="@+id/tvConfirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/item_game_text_8"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="8/14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/item_game_text_9"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <!-- Price -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_money"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/item_game_text_10"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    tools:text="R$ 20,00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/item_game_text_11"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <!-- Organizer -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_person"
                    app:tint="?attr/colorSecondary" />

                <TextView
                    android:id="@+id/tvOrganizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/item_game_text_12"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Carlos" />

                <TextView
                    android:id="@+id/tvGroupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/item_game_text_13"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Amigos do Futeba" />

            </LinearLayout>

        </LinearLayout>

        <!-- Actions Divider -->
        <View
            android:id="@+id/dividerActions"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?attr/colorOutlineVariant"
            android:alpha="0.3"
            app:layout_constraintTop_toBottomOf="@id/layoutStats" />

        <!-- Quick Actions Row com touch targets 48dp+ -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:paddingTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/dividerActions"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMap"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:paddingHorizontal="16dp"
                android:text="@string/item_game_text_14"
                android:textSize="14sp"
                app:icon="@drawable/ic_location"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:iconTint="?attr/colorOnSurfaceVariant"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnQuickConfirm"
                style="@style/Widget.Material3.Button.TonalButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:paddingHorizontal="20dp"
                android:text="@string/item_game_text_15"
                android:textSize="14sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_check"
                app:cornerRadius="12dp"
                android:textColor="?attr/colorOnSecondaryContainer"
                app:backgroundTint="?attr/colorSecondaryContainer"
                app:iconTint="?attr/colorOnSecondaryContainer" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

