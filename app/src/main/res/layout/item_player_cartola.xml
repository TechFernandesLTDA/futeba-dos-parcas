<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <!-- Avatar Circle - Reduced to 56dp -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPlayerAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_person"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeWidth="2dp"
            app:strokeColor="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"/>

        <!-- Invite Button - Pinned to End -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInvite"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Convidar"
            android:textSize="12sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingVertical="0dp"
            android:minHeight="0dp"
            style="@style/Widget.Material3.Button.TonalButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Player Name and Level Container -->
        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/ivPlayerAvatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnInvite"
            app:layout_constraintBottom_toTopOf="@id/tvPlayerPosition"
            app:layout_constraintVertical_chainStyle="packed">

            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Alexandre Castro"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Bruno Almeida"/>

            <TextView
                android:id="@+id/tvPlayerLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Nvl 5"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:background="@drawable/bg_badge_level"
                android:textColor="@android:color/white"
                tools:backgroundTint="#CD7F32"
                tools:text="Nvl 5"/>
        </LinearLayout>

        <!-- Preferred Position -->
        <TextView
            android:id="@+id/tvPlayerPosition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Meio-Campo • Society"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/ivPlayerAvatar"
            app:layout_constraintTop_toBottomOf="@id/headerContainer"
            app:layout_constraintEnd_toStartOf="@id/btnInvite"
            app:layout_constraintBottom_toTopOf="@id/layoutRatings"
            tools:text="Atacante • Futsal"/>

        <!-- Ratings Row -->
        <LinearLayout
            android:id="@+id/layoutRatings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:gravity="start"
            app:layout_constraintStart_toEndOf="@id/ivPlayerAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvPlayerPosition"
            app:layout_constraintEnd_toStartOf="@id/btnInvite"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Striker Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ATA"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/tvStrikerRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    tools:text="4" />
            </LinearLayout>

            <!-- Mid Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MEI"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/tvMidRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    tools:text="4" />
            </LinearLayout>

            <!-- Def Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEF"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/tvDefRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    tools:text="3" />
            </LinearLayout>

            <!-- GK Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GOL"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/tvGkRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    tools:text="5" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
