<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Header Shimmer -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.None">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- User Photo Shimmer -->
                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/skeleton_rounded"
                    android:backgroundTint="?attr/colorOutlineVariant" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <View
                        android:layout_width="120dp"
                        android:layout_height="14dp"
                        android:background="@drawable/skeleton_rounded"
                        android:backgroundTint="?attr/colorOutlineVariant" />

                    <View
                        android:layout_width="180dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/skeleton_rounded"
                        android:backgroundTint="?attr/colorOutlineVariant" />
                </LinearLayout>

                <View
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:background="@drawable/skeleton_rounded"
                    android:backgroundTint="?attr/colorOutlineVariant" />
            </LinearLayout>

            <!-- XP Progress Shimmer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="12dp"
                    android:background="@drawable/skeleton_rounded"
                    android:backgroundTint="?attr/colorOutlineVariant" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/skeleton_rounded"
                    android:backgroundTint="?attr/colorOutlineVariant" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/skeleton_rounded"
                    android:backgroundTint="?attr/colorOutlineVariant" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Games Title Shimmer -->
    <View
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/skeleton_rounded"
        android:backgroundTint="?attr/colorOutlineVariant" />

    <!-- Game List Shimmer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp">
        <include layout="@layout/item_game_shimmer" />
        <include layout="@layout/item_game_shimmer" />
        <include layout="@layout/item_game_shimmer" />
    </LinearLayout>

</LinearLayout>
