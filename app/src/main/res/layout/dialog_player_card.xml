<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/playerCard"
        android:layout_width="340dp"
        android:layout_height="620dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="16dp"
        app:strokeWidth="2dp"
        app:strokeColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_player_card_green_gradient">

            <!-- Header with Brand and Buttons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Brand Center -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:textColor="@android:color/white"
                        android:shadowColor="#80000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>

                    <TextView
                        android:id="@+id/tvCardTimestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Gerado em 28/12/2024 às 23:05"
                        android:textSize="9sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        tools:text="Gerado em 28/12/2024 às 23:05"/>
                </LinearLayout>

                <!-- Buttons Right -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnShareWhatsapp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_whatsapp"
                        app:tint="@android:color/white"
                        android:contentDescription="Compartilhar" />

                    <ImageButton
                        android:id="@+id/btnClose"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_close"
                        app:tint="@android:color/white"
                        android:contentDescription="Fechar" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Player Photo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="55dp"
                app:cardElevation="6dp"
                app:strokeWidth="3dp"
                app:strokeColor="@android:color/white">

                <ImageView
                    android:id="@+id/ivPlayerPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_player_placeholder"
                    android:contentDescription="Foto do jogador" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Player Name -->
            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="Jogador"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="3"
                tools:text="Renan Locatiz" />

            <!-- Level Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_level_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp">

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    tools:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/tvLevelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habilidoso"
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    tools:text="Habilidoso" />

            </LinearLayout>

            <!-- XP Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XP"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        android:shadowColor="#80000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:id="@+id/tvXpProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2500 / 3850"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:shadowColor="#80000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        tools:text="2500 / 3850" />

                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressXp"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="6dp"
                    app:trackCornerRadius="4dp"
                    app:indicatorColor="@color/accent"
                    app:trackColor="#4DFFFFFF"
                    tools:progress="65" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                android:alpha="0.3"/>

            <!-- Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- Top Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvTotalGames"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jogos"
                            android:textSize="11sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9" 
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvTotalGoals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gols"
                            android:textSize="11sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvTotalAssists"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assist."
                            android:textSize="11sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Bottom Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvWins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="25" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vitórias"
                            android:textSize="11sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvMvp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MVP"
                            android:textSize="11sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvSaves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            tools:text="12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Defesas"
                            android:textSize="11sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Skills -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="PERFIL TÁTICO"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:letterSpacing="0.1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <!-- Striker -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressStriker"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_centerInParent="true"
                            app:indicatorSize="52dp"
                            app:trackThickness="4dp"
                            app:indicatorColor="@color/accent"
                            app:trackColor="#4DFFFFFF"
                            tools:progress="75" />

                        <TextView
                            android:id="@+id/tvStrikerRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="3.8"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#60000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            tools:text="3.8" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="ATK"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>

                </LinearLayout>

                <!-- Mid -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressMid"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_centerInParent="true"
                            app:indicatorSize="52dp"
                            app:trackThickness="4dp"
                            app:indicatorColor="@color/accent"
                            app:trackColor="#4DFFFFFF"
                            tools:progress="80" />

                        <TextView
                            android:id="@+id/tvMidRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="4.0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#60000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            tools:text="4.0" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="MID"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>

                </LinearLayout>

                <!-- Defender -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressDefender"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_centerInParent="true"
                            app:indicatorSize="52dp"
                            app:trackThickness="4dp"
                            app:indicatorColor="@color/accent"
                            app:trackColor="#4DFFFFFF"
                            tools:progress="70" />

                        <TextView
                            android:id="@+id/tvDefenderRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="3.5"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#60000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            tools:text="3.5" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="DEF"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>

                </LinearLayout>

                <!-- GK -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressGk"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_centerInParent="true"
                            app:indicatorSize="52dp"
                            app:trackThickness="4dp"
                            app:indicatorColor="@color/accent"
                            app:trackColor="#4DFFFFFF"
                            tools:progress="60" />

                        <TextView
                            android:id="@+id/tvGkRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="3.0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="#60000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            tools:text="3.0" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="GK"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
