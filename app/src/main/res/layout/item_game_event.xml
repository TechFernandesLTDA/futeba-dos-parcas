<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:contentPadding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Minuto -->
        <TextView
            android:id="@+id/tvMinute"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/item_game_event_text_1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/badge_primary"
            android:gravity="center" />

        <!-- Icone do evento -->
        <TextView
            android:id="@+id/tvEventIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:textSize="24sp"
            android:gravity="center"
            tools:text="âš½" />

        <!-- Descricao -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">
            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_game_event_text_2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tvEventSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_game_event_text_3"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Badge do time -->
        <TextView
            android:id="@+id/tvEventTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_game_event_text_4"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/badge_primary"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
