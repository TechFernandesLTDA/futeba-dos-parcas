<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/bg_bottom_sheet">

    <View
        android:id="@+id/vHandle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_finish_game_text_1"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/vHandle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorOutlineVariant"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_finish_game_text_2"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:letterSpacing="0.1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                    android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etScoreA"
                        android:layout_width="80dp"
                        android:layout_height="64dp"
                        android:inputType="number"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:maxLength="2"
                        android:background="@drawable/bg_score_input"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="1"/>

                    <TextView
                        android:id="@+id/tvTeamAName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_finish_game_text_3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_finish_game_text_4"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:layout_marginHorizontal="24dp"
                    android:textColor="?attr/colorOutline"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etScoreB"
                        android:layout_width="80dp"
                        android:layout_height="64dp"
                        android:inputType="number"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:maxLength="2"
                        android:background="@drawable/bg_score_input"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="0"/>

                    <TextView
                        android:id="@+id/tvTeamBName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_finish_game_text_5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvSummaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_finish_game_text_6"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:letterSpacing="0.1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cvScore"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHighlights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxHeight="200dp"
        tools:listitem="@layout/item_live_event"
        app:layout_constraintTop_toBottomOf="@id/tvSummaryTitle"/>

    <TextView
        android:id="@+id/tvMvpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_finish_game_text_7"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:letterSpacing="0.1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/rvHighlights"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilMvp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvMvpTitle">

        <AutoCompleteTextView
            android:id="@+id/actMvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dialog_finish_game_hint_8"
            android:inputType="none"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvDisclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_finish_game_text_9"
        android:textSize="12sp"
        android:textColor="?attr/colorOutline"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tilMvp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="@string/dialog_finish_game_text_10"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_sports_soccer"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvDisclaimer"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
