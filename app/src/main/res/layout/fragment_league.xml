<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:id="@+id/layoutFixedHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="?attr/colorSurface"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Futeba dos ParÃ§as"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />

        <FrameLayout
            android:id="@+id/layoutNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNotifications"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_notifications" />
            <TextView
                android:id="@+id/tvNotificationBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:padding="2dp"
                android:minWidth="16dp"
                android:gravity="center"
                android:text="0"
                android:visibility="gone"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp" />
        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGroups"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_group" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMap"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_location" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutFixedHeader"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Card com Info da Temporada -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvSeasonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temporada 2024/2025"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:lineSpacingMultiplier="1.2" />

                    <TextView
                        android:id="@+id/tvSeasonDates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Janeiro - Dezembro 2025"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.9"
                        android:layout_marginTop="4dp" />

                    <!-- Minha PosiÃ§Ã£o com destaque -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="24dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Minha PosiÃ§Ã£o"
                                android:textSize="15sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.85" />

                            <TextView
                                android:id="@+id/tvMyPosition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="#15"
                                android:textSize="52sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                        </LinearLayout>

                        <!-- Badge de DivisÃ£o grande -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvMyDivision"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ¥ˆ Prata"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:paddingHorizontal="18dp"
                                android:paddingVertical="10dp"
                                android:background="@drawable/badge_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Grid de EstatÃ­sticas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:weightSum="3">

                        <!-- Pontos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pontos"
                                android:textSize="13sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.8" />

                            <TextView
                                android:id="@+id/tvMyPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Jogos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jogos"
                                android:textSize="13sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.8" />

                            <TextView
                                android:id="@+id/tvMyGames"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- VitÃ³rias -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VitÃ³rias"
                                android:textSize="13sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.8" />

                            <TextView
                                android:id="@+id/tvMyWins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Segunda linha de stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:weightSum="3">

                        <!-- Gols -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âš½ Gols"
                                android:textSize="13sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.8" />

                            <TextView
                                android:id="@+id/tvMyGoals"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Saldo de Gols -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Saldo"
                                android:textSize="13sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.8" />

                            <TextView
                                android:id="@+id/tvMyGoalDiff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+5"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- MVP -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â­ MVP"
                                android:textSize="13sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.8" />

                            <TextView
                                android:id="@+id/tvMyMvp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tabs de DivisÃµes -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabDivisions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:minHeight="56dp"
                app:tabMode="scrollable"
                app:tabTextColor="?attr/colorOnSurface"
                app:tabSelectedTextColor="@color/primary"
                app:tabIndicatorColor="@color/primary"
                app:tabIndicatorHeight="4dp"
                app:tabTextAppearance="@style/TextAppearance.Material3.TitleMedium"
                app:tabPaddingStart="20dp"
                app:tabPaddingEnd="20dp">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥‡ Ouro" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥ˆ Prata" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥‰ Bronze" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’Ž Diamante" />

            </com.google.android.material.tabs.TabLayout>

            <!-- TÃ­tulo do Ranking -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranking"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="12dp" />

            <!-- Lista de Ranking -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRanking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_ranking"
                tools:itemCount="10" />

            <!-- Empty State melhorado -->
            <LinearLayout
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ†"
                    android:textSize="64sp"
                    android:alpha="0.3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Nenhum jogador nesta divisÃ£o"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Jogue mais partidas para\nsubir no ranking!"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
