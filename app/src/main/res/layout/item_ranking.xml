<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Linha Principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Posição com destaque -->
            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/item_ranking_text_1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:background="@drawable/bg_circle_primary_light"
                tools:text="1" />

            <!-- Indicador de Liga (Promoção/Rebaixamento) -->
            <ImageView
                android:id="@+id/ivLeagueStatus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_expand_less"
                android:visibility="gone"
                app:tint="@color/success"
                tools:visibility="visible"
                android:contentDescription="Status da Liga" />

            <!-- Avatar com Brasão -->
            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="12dp">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/item_ranking_contentdescription_2" />

                <!-- Brasão de Nível -->
                <ImageView
                    android:id="@+id/ivLevelBadgeRanking"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="bottom|end"
                    android:contentDescription="@string/item_ranking_contentdescription_3"
                    android:src="@drawable/ic_level_badge_0" />

            </FrameLayout>

            <!-- Nome e Stats -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPlayerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_4"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="João Silva" />

                <TextView
                    android:id="@+id/tvStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_5"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="4dp"
                    tools:text="15J • 10V • ⚽12" />

            </LinearLayout>

            <!-- Pontos -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_6"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    tools:text="45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_7"
                    android:textSize="11sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.7" />

            </LinearLayout>

        </LinearLayout>

        <!-- Linha de Estatísticas Detalhadas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:paddingTop="12dp"
            android:background="?attr/colorSurfaceVariant"
            android:paddingHorizontal="12dp"
            android:paddingBottom="8dp"
            android:weightSum="4">

            <!-- Gols -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_8"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_9"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="2dp"
                    tools:text="12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_10"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Saldo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_11"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvGoalDiff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_12"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="2dp"
                    tools:text="+5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_13"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- MVP -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_14"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvMvp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_15"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="2dp"
                    tools:text="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_16"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Win Rate -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_17"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvWinRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_18"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="2dp"
                    tools:text="67%" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_ranking_text_19"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

