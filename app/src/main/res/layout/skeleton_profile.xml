<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header Skeleton -->
    <View
        android:id="@+id/skeletonHeader"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Avatar Skeleton -->
    <View
        android:id="@+id/skeletonAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/skeleton_circle"
        app:layout_constraintBottom_toBottomOf="@id/skeletonHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Name Skeleton -->
    <View
        android:id="@+id/skeletonName"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/skeleton_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeletonHeader" />

    <!-- Email Skeleton -->
    <View
        android:id="@+id/skeletonEmail"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/skeleton_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeletonName" />

    <!-- Field Preferences Skeleton -->
    <LinearLayout
        android:id="@+id/skeletonFieldPrefs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeletonEmail">

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/skeleton_circle" />

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/skeleton_circle" />

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/skeleton_circle" />
    </LinearLayout>

    <!-- Ratings Card Skeleton -->
    <View
        android:id="@+id/skeletonRatingsCard"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/skeleton_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeletonFieldPrefs" />

    <!-- Statistics Card Skeleton -->
    <View
        android:id="@+id/skeletonStatsCard"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/skeleton_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeletonRatingsCard" />

    <!-- Menu Cards Skeleton -->
    <View
        android:id="@+id/skeletonMenuCard1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/skeleton_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeletonStatsCard" />

    <View
        android:id="@+id/skeletonMenuCard2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/skeleton_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeletonMenuCard1" />

    <View
        android:id="@+id/skeletonMenuCard3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/skeleton_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skeletonMenuCard2" />

</androidx.constraintlayout.widget.ConstraintLayout>
