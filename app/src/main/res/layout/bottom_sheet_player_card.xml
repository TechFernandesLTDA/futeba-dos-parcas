<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerCardContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet_rounded"
        android:paddingBottom="24dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_bottom_sheet_handle" />

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <!-- Header com Foto e Nome -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    android:background="@drawable/bg_player_card_header">

                    <!-- Foto do Jogador -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="8dp"
                        app:strokeWidth="4dp"
                        app:strokeColor="@color/primary">

                        <ImageView
                            android:id="@+id/ivPlayerPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_player_placeholder"
                            android:contentDescription="Foto do jogador" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Nome -->
                    <TextView
                        android:id="@+id/tvPlayerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Jogador"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Rodrigo Gomes" />

                    <!-- Desde quando -->
                    <TextView
                        android:id="@+id/tvMemberSince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Membro desde Jan 2024"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Membro desde Jan 2024" />

                </LinearLayout>

                <!-- NÃ­vel e XP -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NÃ­vel"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.9" />

                                <TextView
                                    android:id="@+id/tvLevel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textSize="48sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    tools:text="5" />

                                <TextView
                                    android:id="@+id/tvLevelName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Habilidoso"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.95"
                                    tools:text="Habilidoso" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â­"
                                android:textSize="64sp" />

                        </LinearLayout>

                        <!-- Barra de Progresso XP -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ExperiÃªncia"
                                    android:textSize="13sp"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.9" />

                                <TextView
                                    android:id="@+id/tvXpProgress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2500 / 3850 XP"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    tools:text="2500 / 3850 XP" />

                            </LinearLayout>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progressXp"
                                android:layout_width="match_parent"
                                android:layout_height="12dp"
                                android:layout_marginTop="8dp"
                                app:trackCornerRadius="6dp"
                                app:indicatorColor="@android:color/white"
                                app:trackColor="#4DFFFFFF"
                                tools:progress="65" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- EstatÃ­sticas Principais -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"
                    android:text="ðŸ“Š EstatÃ­sticas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Jogos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ®"
                            android:textSize="32sp" />

                        <TextView
                            android:id="@+id/tvTotalGames"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="42" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Jogos"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Gols -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš½"
                            android:textSize="32sp" />

                        <TextView
                            android:id="@+id/tvTotalGoals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Gols"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- AssistÃªncias -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ¯"
                            android:textSize="32sp" />

                        <TextView
                            android:id="@+id/tvTotalAssists"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="AssistÃªncias"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Segunda linha de stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:weightSum="3">

                    <!-- VitÃ³rias -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ†"
                            android:textSize="32sp" />

                        <TextView
                            android:id="@+id/tvWins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="25" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="VitÃ³rias"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- MVP -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â­"
                            android:textSize="32sp" />

                        <TextView
                            android:id="@+id/tvMvp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="MVP"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Defesas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_stat_card">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ§¤"
                            android:textSize="32sp" />

                        <TextView
                            android:id="@+id/tvSaves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Defesas"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Skills/Ratings -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"
                    android:text="âš¡ Habilidades"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Ataque -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Ataque"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressStriker"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        app:trackCornerRadius="4dp"
                        app:indicatorColor="@color/primary"
                        app:trackColor="?attr/colorSurfaceVariant"
                        tools:progress="75" />

                    <TextView
                        android:id="@+id/tvStrikerRating"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="3.8"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:gravity="end"
                        tools:text="3.8" />

                </LinearLayout>

                <!-- Meio-Campo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Meio-Campo"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressMid"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        app:trackCornerRadius="4dp"
                        app:indicatorColor="@color/primary"
                        app:trackColor="?attr/colorSurfaceVariant"
                        tools:progress="80" />

                    <TextView
                        android:id="@+id/tvMidRating"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="4.0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:gravity="end"
                        tools:text="4.0" />

                </LinearLayout>

                <!-- Defesa -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Defesa"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressDefender"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        app:trackCornerRadius="4dp"
                        app:indicatorColor="@color/primary"
                        app:trackColor="?attr/colorSurfaceVariant"
                        tools:progress="70" />

                    <TextView
                        android:id="@+id/tvDefenderRating"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="3.5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:gravity="end"
                        tools:text="3.5" />

                </LinearLayout>

                <!-- Goleiro -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Goleiro"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressGk"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        app:trackCornerRadius="4dp"
                        app:indicatorColor="@color/primary"
                        app:trackColor="?attr/colorSurfaceVariant"
                        tools:progress="60" />

                    <TextView
                        android:id="@+id/tvGkRating"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="3.0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:gravity="end"
                        tools:text="3.0" />

                </LinearLayout>

                <!-- BotÃ£o Compartilhar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShare"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="24dp"
                    android:text="Compartilhar no WhatsApp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_share"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/primary" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
