<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Game Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorOutlineVariant"
        app:cardBackgroundColor="?attr/colorSurfaceVariant">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="20/12/2024" />

                <TextView
                    android:id="@+id/tvStatusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_status_badge"
                    tools:text="AO VIVO"
                    tools:backgroundTint="@color/theme_red_primary"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="19:00" />
                    
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_weather_sunny" 
                    android:layout_marginStart="16dp"
                    app:tint="?attr/colorOnSurfaceVariant"
                    tools:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:text="Arena XP"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                app:drawableStartCompat="@android:drawable/ic_menu_myplaces"
                app:drawableTint="?attr/colorOnSurfaceVariant" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                
                <TextView
                    android:id="@+id/tvFieldName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quadra 2"
                    android:textColor="?attr/colorOnSurfaceVariant" />
                    
                <TextView
                    android:id="@+id/tvCourtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • Coberta"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="?attr/colorOutlineVariant" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R$ 25,00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/tvPlayersCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/14"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>
            
            <!-- Finished Game Summary (General MVP) -->
            <LinearLayout
                android:id="@+id/llFinishedSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                tools:visibility="visible">
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOutlineVariant"
                    android:layout_marginBottom="12dp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MVP DA PARTIDA"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:letterSpacing="0.1"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">
                    
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivMvpPhoto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        tools:src="@tools:sample/avatars"/>
                        
                    <TextView
                        android:id="@+id/tvMvpName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Renan Locatiz"/>
                        
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_star"
                        app:tint="@color/theme_yellow_primary"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Personal Performance Box -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvPersonalPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:strokeWidth="0dp"
                android:visibility="gone"
                tools:visibility="visible">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEU DESEMPENHO"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:letterSpacing="0.1"/>
                        
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:id="@+id/tvPersonalXp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            tools:text="+45 XP"/>
                            
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                            
                        <LinearLayout
                            android:id="@+id/llBadges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            
                            <ImageView
                                android:id="@+id/ivBadgeMvp"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_star"
                                app:tint="@color/theme_yellow_primary"
                                android:visibility="gone"
                                tools:visibility="visible"/>

                            <ImageView
                                android:id="@+id/ivBadgeBestGk"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_save_action"
                                app:tint="@color/theme_blue_primary"
                                android:visibility="gone"
                                tools:visibility="visible"/>

                            <ImageView
                                android:id="@+id/ivBadgeWorst"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_card_filled"
                                app:tint="@color/theme_red_primary"
                                android:visibility="gone"
                                tools:visibility="visible"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Admin Controls -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorOutlineVariant"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Administração"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchOpenList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lista Aberta"
                android:textColor="?attr/colorOnSurface"
                android:checked="true" />
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar Jogo"
                android:visibility="gone"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginTop="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinishGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finalizar Jogo"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:backgroundTint="?attr/colorError"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:icon="@drawable/ic_sports_soccer"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerateTeams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sortear Times"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginTop="4dp"
                app:icon="@drawable/ic_group"
                app:iconGravity="textStart"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditGame"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Editar Configurações" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cancelar Jogo"
                android:textColor="?attr/colorError"
                app:strokeColor="?attr/colorError"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
