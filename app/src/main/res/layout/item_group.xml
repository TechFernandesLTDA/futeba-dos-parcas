<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Foto do Grupo com Borda de Status -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivGroupPhoto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_groups"
            app:civ_border_color="?attr/colorPrimary"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nome do Grupo -->
        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Pelada de Quarta"
            app:layout_constraintEnd_toStartOf="@+id/chipRole"
            app:layout_constraintStart_toEndOf="@+id/ivGroupPhoto"
            app:layout_constraintTop_toTopOf="@+id/ivGroupPhoto" />

        <!-- Info de Membros com Ícone -->
        <ImageView
            android:id="@+id/ivMemberIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_person"
            app:tint="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toStartOf="@+id/tvGroupName"
            app:layout_constraintTop_toBottomOf="@+id/tvGroupName" />

        <TextView
            android:id="@+id/tvMemberCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            tools:text="24 membros"
            app:layout_constraintBottom_toBottomOf="@+id/ivMemberIcon"
            app:layout_constraintStart_toEndOf="@+id/ivMemberIcon"
            app:layout_constraintTop_toTopOf="@+id/ivMemberIcon" />

        <!-- Badge de Role (Dono/Admin) - Estilo Pill -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipRole"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textStyle="bold"
            app:chipBackgroundColor="?attr/colorSecondaryContainer"
            app:chipCornerRadius="16dp"
            app:chipStrokeWidth="0dp"
            app:ensureMinTouchTargetSize="false"
            tools:text="Admin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Elemento de Gamificação: Nível do Grupo (placeholder funcional) -->
        <LinearLayout
            android:id="@+id/layoutLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivMemberIcon"
            app:layout_constraintStart_toStartOf="@+id/tvGroupName">
            
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_star"
                app:tint="?attr/colorPrimary"
                android:contentDescription="Nível"/>

            <ProgressBar
                android:id="@+id/pbGroupLevel"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="80dp"
                android:layout_height="4dp"
                android:layout_marginStart="6dp"
                android:progress="60"
                android:progressDrawable="@drawable/bg_progress_rounded_green"
                tools:progress="60" />
            
             <TextView
                android:id="@+id/tvLevelInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Lvl 1"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
