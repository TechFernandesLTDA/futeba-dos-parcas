<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    app:contentPadding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Date Shimmer -->
        <View
            android:id="@+id/shimmerDate"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Status Badge Shimmer -->
        <View
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Location Icon Shimmer -->
        <View
            android:id="@+id/shimmerLocIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/shimmerDate"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Location Text Shimmer -->
        <View
            android:layout_width="150dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toTopOf="@id/shimmerLocIcon"
            app:layout_constraintStart_toEndOf="@id/shimmerLocIcon" />

        <!-- Field Text Shimmer -->
        <View
            android:id="@+id/shimmerField"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="24dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/shimmerLocIcon"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Confirmed Icon Shimmer -->
        <View
            android:id="@+id/shimmerConfIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/shimmerField"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Confirmed Text Shimmer -->
        <View
            android:layout_width="120dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toTopOf="@id/shimmerConfIcon"
            app:layout_constraintStart_toEndOf="@id/shimmerConfIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
