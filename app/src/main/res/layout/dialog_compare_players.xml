<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_compare_players_text_1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="?attr/colorOnSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Player A Header -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPlayerA"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeWidth="2dp"
            app:strokeColor="?attr/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvVS" />

        <TextView
            android:id="@+id/tvNameA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/dialog_compare_players_text_2"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/ivPlayerA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvVS"
            android:layout_marginHorizontal="8dp"/>

        <!-- VS -->
        <TextView
            android:id="@+id/tvVS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_compare_players_text_3"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOutline"
            app:layout_constraintTop_toTopOf="@id/ivPlayerA"
            app:layout_constraintBottom_toBottomOf="@id/ivPlayerA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Player B Header -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPlayerB"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeWidth="2dp"
            app:strokeColor="?attr/colorSecondary"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toEndOf="@id/tvVS"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvNameB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/dialog_compare_players_text_4"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/ivPlayerB"
            app:layout_constraintStart_toEndOf="@id/tvVS"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="8dp"/>

        <!-- Radar Chart -->
        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/radarChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvNameA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Stats Table -->
        <TableLayout
            android:id="@+id/tableStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:stretchColumns="0,2"
            app:layout_constraintTop_toBottomOf="@id/radarChart">
            
            <!-- Header Row has no semantic value, skipping -->

            <!-- Gols -->
            <TableRow android:paddingVertical="8dp">
                <TextView android:id="@+id/tvGoalsA" android:gravity="center" android:textStyle="bold" android:textSize="18sp" android:text="@string/dialog_compare_players_text_5"/>
                <TextView android:gravity="center" android:text="@string/dialog_compare_players_text_6" android:textColor="?attr/colorOnSurfaceVariant"/>
                <TextView android:id="@+id/tvGoalsB" android:gravity="center" android:textStyle="bold" android:textSize="18sp" android:text="@string/dialog_compare_players_text_7"/>
            </TableRow>
            <View android:background="?attr/colorOutlineVariant" android:layout_height="1dp" android:alpha="0.2"/>

            <!-- AssistÃªncias -->
            <TableRow android:paddingVertical="8dp">
                <TextView android:id="@+id/tvAssistsA" android:gravity="center" android:textStyle="bold" android:textSize="18sp" android:text="@string/dialog_compare_players_text_8"/>
                <TextView android:gravity="center" android:text="@string/dialog_compare_players_text_9" android:textColor="?attr/colorOnSurfaceVariant"/>
                <TextView android:id="@+id/tvAssistsB" android:gravity="center" android:textStyle="bold" android:textSize="18sp" android:text="@string/dialog_compare_players_text_10"/>
            </TableRow>
            <View android:background="?attr/colorOutlineVariant" android:layout_height="1dp" android:alpha="0.2"/>

            <!-- Jogos -->
            <TableRow android:paddingVertical="8dp">
                <TextView android:id="@+id/tvGamesA" android:gravity="center" android:textStyle="bold" android:textSize="18sp" android:text="@string/dialog_compare_players_text_11"/>
                <TextView android:gravity="center" android:text="@string/dialog_compare_players_text_12" android:textColor="?attr/colorOnSurfaceVariant"/>
                <TextView android:id="@+id/tvGamesB" android:gravity="center" android:textStyle="bold" android:textSize="18sp" android:text="@string/dialog_compare_players_text_13"/>
            </TableRow>
             <View android:background="?attr/colorOutlineVariant" android:layout_height="1dp" android:alpha="0.2"/>

            <!-- MVP -->
            <TableRow android:paddingVertical="8dp">
                <TextView android:id="@+id/tvMvpA" android:gravity="center" android:textStyle="bold" android:textSize="18sp" android:text="@string/dialog_compare_players_text_14"/>
                <TextView android:gravity="center" android:text="@string/dialog_compare_players_text_15" android:textColor="?attr/colorOnSurfaceVariant"/>
                <TextView android:id="@+id/tvMvpB" android:gravity="center" android:textStyle="bold" android:textSize="18sp" android:text="@string/dialog_compare_players_text_16"/>
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
