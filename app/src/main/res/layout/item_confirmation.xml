<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivUserPhoto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@tools:sample/avatars"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/ivUserPhoto"
        app:layout_constraintEnd_toStartOf="@id/tvPaymentStatus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Nome do Jogador" />

        <TextView
            android:id="@+id/tvUserType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            tools:text="Mensalista" />

        <LinearLayout
            android:id="@+id/llBadges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvXp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10 XP"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/ivMvp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                app:tint="@color/theme_yellow_primary"
                android:visibility="gone"
                android:layout_marginEnd="4dp"/>

            <ImageView
                android:id="@+id/ivBestGk"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_security" 
                app:tint="@color/theme_blue_primary"
                android:visibility="gone"
                android:layout_marginEnd="4dp"/>

            <ImageView
                android:id="@+id/ivWorst"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_sentiment_dissatisfied"
                app:tint="@color/theme_red_primary"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvPaymentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/btnRemovePlayer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pago"
        tools:background="@drawable/bg_status_confirmed"/>

    <LinearLayout
        android:id="@+id/layoutPendingActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/btnRemovePlayer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDecline"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recusar"
            android:textColor="@color/error"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:paddingHorizontal="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccept"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceitar"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:paddingHorizontal="12dp"
            app:cornerRadius="24dp" />
    </LinearLayout>
        
    <ImageButton
        android:id="@+id/btnRemovePlayer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="?attr/colorError" />

</androidx.constraintlayout.widget.ConstraintLayout>
