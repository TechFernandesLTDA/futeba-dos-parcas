# ========================================
# FUTEBA DOS PARÇAS - Backend Configuration
# ========================================

# Node Environment
NODE_ENV=development
PORT=3000
HOST=localhost

# ========================================
# DATABASE (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=futeba_user
DB_PASSWORD=your_password
DB_DATABASE=futeba_db

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRATION=7d

# ========================================
# FIREBASE ADMIN SDK
# ========================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# ========================================
# CLOUD STORAGE (AWS S3)
# ========================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_BUCKET_NAME=futeba-uploads
AWS_REGION=us-east-1

# ========================================
# PIX INTEGRATION
# ========================================
# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key

# Chave PIX padrão (fallback)
DEFAULT_PIX_KEY=seu@email.com

# ========================================
# EMAIL SERVICE
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu@email.com
SMTP_PASSWORD=sua_senha_app

# ========================================
# WEBSOCKET
# ========================================
WS_PORT=3001

# ========================================
# CRON JOBS
# ========================================
GAME_GENERATION_DAYS_AHEAD=30
AUTO_CLOSE_CONFIRMATIONS_HOURS=2

# ========================================
# GAMIFICATION
# ========================================
XP_PER_GAME=10
XP_PER_GOAL=5
XP_PER_WIN=15
XP_PER_MVP=50
LEAGUE_POINTS_WIN=3
LEAGUE_POINTS_DRAW=1

# ========================================
# CORS
# ========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ========================================
# DEVELOPMENT
# ========================================
DEBUG=true
MOCK_PAYMENTS=true
